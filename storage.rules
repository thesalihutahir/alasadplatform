rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper: Check if user is an admin
    function isAdmin() {
      return request.auth != null; 
    }

    // 1. Blog & Content Images
    match /blog_images/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 2. Research PDFs
    match /research_pdfs/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 3. Admin Profile Photos (FIXED SYNTAX)
    // Matches any file in the admins folder, checks if filename starts with User UID
    match /admins/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && fileName.matches(request.auth.uid + '_.*');
    }

    // 4. General Gallery
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
